<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etCarName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del auto"
        android:inputType="text" />

    <EditText
        android:id="@+id/etCarModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo"
        android:inputType="text" />

    <EditText
        android:id="@+id/etCarYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="AÃ±o"
        android:inputType="number" />

    <Button
        android:id="@+id/btnSaveCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar auto" />

    <Button
        android:id="@+id/btnFetchCars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver autos registrados" />

    <ListView
        android:id="@+id/lvCars"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
